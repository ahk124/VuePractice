<div class="row">
    <div class="col-md-12">
        <input type="text" v-model="x"/>
        <input type="text" v-model="y"/>
        <br/>
        {{z}}
        <br/>
        <button @@click="doSomething">click me</button>
        <br/>
        {{t}}
    </div>
</div>
