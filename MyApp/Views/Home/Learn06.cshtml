            title: `Hello`,
            x: 10,
            y: 20,
            t: 30
        },
        methods: {
          doSomething: function () {
                this.t++
            }
        },
        computed: {
           z: function () {
                let result=0
                result= this.x + this.y
                return result
            },
        }
    })
</script>
}